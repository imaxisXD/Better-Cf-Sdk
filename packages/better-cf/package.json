{
  "name": "better-cf",
  "version": "0.2.1",
  "description": "Type-safe Cloudflare Queue SDK and CLI",
  "repository": {
    "type": "git",
    "url": "https://github.com/imaxisXD/Better-Cf-Sdk"
  },
  "homepage": "https://github.com/imaxisXD/Better-Cf-Sdk#readme",
  "bugs": {
    "url": "https://github.com/imaxisXD/Better-Cf-Sdk/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./queue": {
      "types": "./dist/queue/index.d.ts",
      "default": "./dist/queue/index.js"
    },
    "./queue/internal": {
      "types": "./dist/queue/internal.d.ts",
      "default": "./dist/queue/internal.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    }
  },
  "bin": {
    "better-cf": "bin/better-cf.mjs"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .tmp-tests",
    "lint": "tsc --noEmit",
    "test": "BETTER_CF_SKIP_WRANGLER_TYPES=1 vitest run",
    "test:watch": "BETTER_CF_SKIP_WRANGLER_TYPES=1 vitest",
    "test:types": "tsc -p tests/types/tsconfig.json --noEmit",
    "test:e2e": "BETTER_CF_SKIP_WRANGLER_TYPES=1 vitest run tests/e2e",
    "check:docs": "node scripts/check-docs.mjs",
    "security:deps": "npm audit --omit=dev",
    "check": "npm run lint && npm run test && npm run test:types && npm run check:docs"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "jsonc-parser": "^3.3.1",
    "picocolors": "^1.1.1",
    "ts-morph": "^27.0.2"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": ">=4.20240117.0",
    "wrangler": ">=3.91.0 <5",
    "zod": ">=3.22.0"
  },
  "peerDependenciesMeta": {
    "wrangler": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250224.0",
    "@types/node": "^22.13.10",
    "hono": "^4.7.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8",
    "zod": "^3.24.2"
  }
}
